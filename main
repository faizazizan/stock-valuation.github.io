<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .calculator {
            text-align: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input, button {
            margin: 10px;
            padding: 8px;
        }

        button {
            cursor: pointer;
        }
    </style>
    <title>Stock Valuation Calculator</title>
</head>
<body>
    <div class="calculator">
        <h2>Stock Valuation Calculator</h2>
        <label for="earnings">Earnings per Share ($):</label>
        <input type="number" id="earnings" placeholder="Enter earnings per share">

        <label for="growthRate">Growth Rate (%):</label>
        <input type="number" id="growthRate" placeholder="Enter growth rate">

        <label for="discountRate">Discount Rate (%):</label>
        <input type="number" id="discountRate" placeholder="Enter discount rate">

        <button onclick="calculateStockValuation()">Calculate Stock Valuation</button>

        <p id="stockValuationResult">Intrinsic Value: $0.00</p>
    </div>

    <script>
        function calculateStockValuation() {
            const earnings = parseFloat(document.getElementById('earnings').value);
            const growthRate = parseFloat(document.getElementById('growthRate').value);
            const discountRate = parseFloat(document.getElementById('discountRate').value);

            if (isNaN(earnings) || isNaN(growthRate) || isNaN(discountRate)) {
                alert("Please enter valid numbers");
                return;
            }

            const intrinsicValue = (earnings * (1 + growthRate / 100)) / (discountRate / 100 - growthRate / 100);
            document.getElementById('stockValuationResult').innerText = `Intrinsic Value: $${intrinsicValue.toFixed(2)}`;
        }
    </script>
</body>
</html>
